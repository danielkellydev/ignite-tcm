<div class="min-h-screen pt-24 pb-12">
  <div class="container mx-auto px-4 max-w-2xl">
    <h2 class="text-4xl font-bold text-white mb-8 text-center">Contact</h2>
    
    <div class="bg-white/10 backdrop-blur-md rounded-lg p-8">
      <%= form_tag send_message_path, class: "space-y-6", data: { turbo: false } do %>
        <div class="space-y-2">
          <label for="name" class="block text-white">Name</label>
          <%= text_field_tag :name, nil, 
              class: "w-full bg-transparent border border-white/30 rounded px-4 py-2 text-white placeholder-white/50 focus:border-white focus:ring-0 transition-colors",
              required: true %>
        </div>
        
        <div class="space-y-2">
          <label for="email" class="block text-white">Email</label>
          <%= email_field_tag :email, nil,
              class: "w-full bg-transparent border border-white/30 rounded px-4 py-2 text-white placeholder-white/50 focus:border-white focus:ring-0 transition-colors",
              required: true %>
        </div>
        
        <div class="space-y-2">
          <label for="message" class="block text-white">Message</label>
          <%= text_area_tag :message, nil,
              class: "w-full bg-transparent border border-white/30 rounded px-4 py-2 text-white placeholder-white/50 focus:border-white focus:ring-0 transition-colors",
              rows: 6,
              required: true %>
        </div>
        
        <div class="text-center">
          <%= submit_tag "Send Message",
              class: "inline-block py-3 px-8 bg-white/10 hover:bg-white/20 rounded-lg transition-colors cursor-pointer text-white" %>
        </div>
      <% end %>
      
      <% if flash[:notice] %>
        <div class="mt-6 text-center text-green-400 animate-fade-in">
          <%= flash[:notice] %>
        </div>
      <% end %>
      
      <% if flash[:alert] %>
        <div class="mt-6 text-center text-red-400 animate-fade-in">
          <%= flash[:alert] %>
        </div>
      <% end %>
    </div>
  </div>
</div>
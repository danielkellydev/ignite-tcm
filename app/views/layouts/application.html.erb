<!DOCTYPE html>
<html>
  <head>
    <title>Ignite TCM - Dr. Daniel Kelly - Melbourne Chinese Medicine</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag 'favicon.svg', type: 'image/svg+xml' %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-black">
    <!-- Video Background (always present) -->
    <%= video_tag "dispensary-video-web.mp4",
        autoplay: true,
        muted: true,
        loop: true,
        playsinline: true,
        class: "fixed h-full w-full object-cover video-fade-in z-0",
        'data-video-loaded': true %>
    
    <!-- Overlay to darken video -->
    <div class="fixed inset-0 bg-black/30 z-10"></div>

    <!-- Navigation -->
    <nav class="fixed w-full z-50 transition-all duration-300" 
         data-controller="nav-scroll"
         data-nav-scroll-target="nav">
      <div class="container mx-auto px-2 sm:px-4 py-4">
        <div class="flex justify-between items-center">
          <!-- Logo -->
          <%= link_to root_path, 
              class: "flex items-center text-white text-lg sm:text-2xl font-bold", 
              data: { turbo_frame: "content" } do %>
            <%= image_tag "favicon.svg", class: "w-6 h-6 sm:w-8 sm:h-8 mr-2", alt: "Ignite TCM Logo" %>
            <span>Ignite TCM</span>
          <% end %>
          
          <!-- Navigation Links -->
          <div class="flex items-center space-x-2 sm:space-x-6 text-sm sm:text-base">
            <%= link_to about_path,
                class: "text-white hover:text-gray-300 transition-colors px-1 sm:px-2",
                data: { turbo_frame: "content" } do %>
              About
            <% end %>
            
            <%= link_to services_path,
                class: "text-white hover:text-gray-300 transition-colors px-1 sm:px-2",
                data: { turbo_frame: "content" } do %>
              Services
            <% end %>
            
            <%= link_to contact_path,
                class: "text-white hover:text-gray-300 transition-colors px-1 sm:px-2",
                data: { turbo_frame: "content" } do %>
              Contact
            <% end %>
            
            <%= link_to "https://www.daobook.com.au/app/book/WlY0ASMyVjE",
                class: "ml-1 sm:ml-2 px-2 sm:px-4 py-1 sm:py-2 bg-white/10 hover:bg-white/20 rounded-lg transition-colors text-white text-sm sm:text-base",
                target: "_blank" do %>
              Book Now
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main content area -->
    <main class="relative z-20">
      <%= turbo_frame_tag "content" do %>
        <%= yield %>
      <% end %>
    </main>

    <script>
      // Add smooth loading for video
      document.addEventListener('DOMContentLoaded', () => {
        const video = document.querySelector('video');
        video.addEventListener('loadeddata', () => {
          video.classList.add('loaded');
        });
      });
    </script>
  </body>
</html>